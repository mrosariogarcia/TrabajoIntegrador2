<%- include("./partials/head") %>

    <body>
	<!-- HEADER -->
        <%- include("./partials/headerLogueado") %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= datosUsuario.fotoDePerfil %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%- datosUsuario.usuario %>
						<a href="/users/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<p class="mailUsuario"><%- datosUsuario.email %></p>
				<div>
					<ul class="">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for(let i=0; i < 5; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/users/">
							<figure class="product-box_image">
								<img src="<%= lista[i].imagen%>" alt="<%= lista[i].producto%>">
							</figure>
							<article class="product-box_data">
								<h2>
									<%= lista[i].producto %>
								</h2>
								<p><%= lista[i].descripcion %></p>
								<p>Comentarios: !!!!!!!!<% comentarios %></p><!-- no anda poner la cantidad de comentarios -->
							</article>
						</a>
					</section>
				</div>
				<% } %>

		</div>
	</div>
	<!-- /Mis productos -->


	<!-- FOOTER -->
		<%- include("./partials/footer") %>
</body>	
</html>