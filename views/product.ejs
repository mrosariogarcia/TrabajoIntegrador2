<%- include("./partials/head") %>

<body>
    <!-- HEADER -->
    <% if (locals.user != undefined) { %>
        <%- include("./partials/headerLogueado") %>
    <% } else { %>
        <%- include("./partials/headerNoLogueado") %>
    <% } %>

    <!-- product detail -->
    <div class="container products-wrapper">
        <div class="d-flex align-items-center">
            <% if (si) { %>
                <p class="product-detail-description editar">
                    <a href="/product/add">Editar</a>
                </p>
            <% } %>
        </div>
        <br>

		<div class="product-detail">
            <div class="row">
                <article class="col-12 col-lg-8 product-detail-info">
                    <img src="<%= resultado.imagen %>" alt="" class="product-detail-img">

                    <h2 class="products-title">
                        <%= resultado.producto %>
                    </h2>

                    <p class="product-detail-description">
                        <%= resultado.descripcion %>
                    </p>
                    <p class="product-detail-description">Publicado por: 
                        <a href="/users/profile/<%= resultado.id_usuario %>">
                            <%= resultado.usuario.usuario %>
                        </a>
                    </p>
                </article>

                <div class="col-12 col-lg-4">
                    <section class="comments">
                        <% for(let i = 0; i < comentarios.length; i++) { %>
                            <article class="pp">
                                <img src="<%= comentarios[i].user.fotoDePerfil %>" alt="">
                                <div class="data">
                                    <p class="user">
                                        <strong>
                                            <a href="/users/profile/<%= comentarios[i].id_usuario %>">
                                                <%= comentarios[i].user.usuario %>
                                            </a>
                                        </strong>
                                        <%= comentarios[i].texto_comentario %>
                                    </p>
                                </div>
                            </article>
                        <% } %>
                    </section>
                    <% if (locals.user != undefined) { %>
                        <form class="form" action="/product/comentario/<%= locals.id_usuario  %>" method="post">
                            <input class="form-input" type="text" name="comentario" placeholder="Agregar comentario">
                            <button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
                        </form>
                    <% } else { %>
                        <p>Debes estar logueado para comentar</p> <!-- le falta css -->
                    <% } %>
                    <hr>
                    

                    

                    <hr>
                </div>
            </div>
        </div>
    </div>

    <!-- FOOTER -->
    <%- include("./partials/footer") %>

</body>

</html>
