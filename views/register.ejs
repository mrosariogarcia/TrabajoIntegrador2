<%- include("./partials/head") %>

	<body>
		<!-- HEADER -->
		<%- include("./partials/headerNoLogueado") %>

			<!-- Novedades -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Registrate</h2>
					</div>

		
					<!-- Show the "ultimos" products -->
					
							<form action="/users/register" method="POST"> <!-- aca antes decia login.html -->
								<label>EMAIL </label><input type="email" name="email" placeholder="EMAIL"
								value="<%= locals.old && old.email ? old.email : ''  %>"> <br><br>
								<% if (locals.errors && errors.email) { %>
									<p class="feedback"><%= errors.email.msg %></p>
								  <% } %>
								<label>NOMBRE DE USUARIO </label><input type="text" name="usuario"
									placeholder="USUARIO" value="<%= locals.old && old.name ? old.name : ''  %>"><br><br>
									<% if (locals.errors && errors.usuario) { %>
										<p class="feedback"><%= errors.usuario.msg %></p>
									  <% } %>
								<label>CONTRASEÑA </label><input type="password" name="contrasena"
									placeholder="CONTRASEÑA" value="<%= locals.old && old.constrasena ? old.constrasena : ''  %>"><br><br>
									<% if (locals.errors && errors.contrasena) { %>
										<p class="feedback"><%= errors.constrasena.msg %></p>
									  <% } %>
								<label>FECHA DE NACIMIENTO </label><input type="date" name="fechaDeNacimiento"
									placeholder="FECHA NACIMIENTO" value="<%= locals.old && old.fechaDeNacimiento ? old.fechaDeNacimiento : ''  %>"><br><br>
									<% if (locals.errors && errors.fechaDeNacimiento) { %>
										<p class="feedback"><%= errors.fechaDeNacimiento.msg %></p>
									  <% } %>
								<label>NUMERO DE DOCUMENTO </label><input type="number" name="dni"
									placeholder="NRO DOCUMENTO" value="<%= locals.old && old.dni ? old.dni : ''  %>">
								<br><br>
								<% if (locals.errors && errors.dni) { %>
									<p class="feedback"><%= errors.dni.msg %></p>
								  <% } %>
								<label>FOTO DE PERFIL </label><input type="file" name="fotoDePerfil"
									placeholder="FOTO DE PERFIL" value="<%= locals.old && old.fotoDePerfil ? old.fotoDePerfil : ''  %>"><br><br>
									<% if (locals.errors && errors.fotoDePerfil) { %>
										<p class="feedback"><%= errors.fotoDePerfil.msg %></p>
									  <% } %>
								<button type="submit"> REGISTRARME </button><br><br>
							</form>


							<div class="col-md-6 text-center">
								<img src="/images/users/defaultPP.png" alt="fotaca" class="img-fluid smaller-image">
							</div>



							<!-- FOOTER -->
							<%- include("./partials/footer") %>

	</body>

	</html>